{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@mcp-installer/shared/*": ["packages/shared/src/*"],
      "@mcp-installer/cli/*": ["packages/cli/src/*"],
      "@mcp-installer/webapp/*": ["packages/webapp/src/*"],
      "@mcp-installer/registry/*": ["packages/registry/*"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "dist", "packages/*/dist", "packages/*/node_modules"]
}